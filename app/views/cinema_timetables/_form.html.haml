= form_for @cinema_timetable do |f|
  - if @cinema_timetable.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cinema_timetable.errors.count, "error")} prohibited this cinema_timetable from being saved:"
      %ul
        - @cinema_timetable.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :cinema
    = f.select(:cinema_id, cinema_options(f.object.cinema_id))
  .field
    = f.label :movie
    = f.select(:movie_id, movie_options(f.object.movie_id))
  .field
    = f.label :hall
    = f.text_field :hall
  .field
    = f.label :start
    = f.datetime_select :start
  .actions
    = f.submit 
