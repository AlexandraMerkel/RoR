= form_for @price do |f|
  - if @price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price.errors.count, "error")} prohibited this price from being saved:"
      %ul
        - @price.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :cost
    = f.number_field :cost
  .field
    = f.label :cinema_timetable
    = f.select(:cinema_timetable_id, cinema_timetable_options(f.object.cinema_timetable_id))
  .field
    = f.label :zone
    = f.select(:zone_id, zone_options(f.object.zone_id))
  .actions
    = f.submit 'Save'
