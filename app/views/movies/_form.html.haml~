= form_for @movie do |f|
  - if @movie.errors.any?
    #error_explanation
      %h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
      %ul
        - @movie.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :min_age
    = f.number_field :min_age
  .field
    = f.label :genre
    = f.number_field :genre
  .field
    = f.label :duration
    = f.number_field :duration
  .field
    = f.label :movie_company
    = f.select(:movie_company_id, movie_company_options(f.object.movie_company_id))
  .actions
    = f.submit 'Save'
